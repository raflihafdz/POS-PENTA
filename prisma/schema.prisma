// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  KASIR
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(KASIR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
  stockHistory StockHistory[]

  @@map("users")
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]

  @@map("categories")
}

model Product {
  id              String    @id @default(cuid())
  name            String
  sku             String    @unique
  description     String?
  buyPrice        Float     @default(0)
  sellPrice       Float                          // Harga eceran
  sellPriceWholesale Float?                      // Harga grosir (opsional)
  wholesaleMinQty Int       @default(1)          // Minimal qty untuk harga grosir
  unit            String    @default("pcs")      // Satuan eceran (pcs, buah, dll)
  unitWholesale   String?                        // Satuan grosir (kg, lusin, box, dll)
  unitConversion  Float     @default(1)          // Konversi: 1 unit grosir = X unit eceran
  jualKiloan      Boolean   @default(false)      // Jual kiloan (beras, telur, gula, dll) - bisa beli pecahan kg
  stock           Float     @default(0)          // Stok (Float untuk mendukung desimal)
  minStock        Int       @default(5)
  expiryDate      DateTime?                      // Tanggal kadaluarsa
  expiryAlertDays Int       @default(30)         // Warning X hari sebelum kadaluarsa
  categoryId      String?
  category        Category? @relation(fields: [categoryId], references: [id])
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  transactionItems TransactionItem[]
  stockHistory     StockHistory[]

  @@map("products")
}

model Transaction {
  id              String            @id @default(cuid())
  invoiceNumber   String            @unique
  totalAmount     Float
  paymentAmount   Float
  changeAmount    Float
  paymentMethod   String            @default("CASH")
  userId          String
  user            User              @relation(fields: [userId], references: [id])
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  transactionItems TransactionItem[]

  @@map("transactions")
}

model TransactionItem {
  id            String      @id @default(cuid())
  transactionId String
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  productId     String
  product       Product     @relation(fields: [productId], references: [id])
  quantity      Float                           // Float untuk mendukung desimal
  price         Float
  subtotal      Float
  priceType     String      @default("RETAIL")  // RETAIL (eceran) atau WHOLESALE (grosir)
  unit          String      @default("pcs")     // Satuan yang digunakan
  createdAt     DateTime    @default(now())

  @@map("transaction_items")
}

enum StockType {
  IN
  OUT
  ADJUSTMENT
}

model StockHistory {
  id          String    @id @default(cuid())
  productId   String
  product     Product   @relation(fields: [productId], references: [id])
  type        StockType
  quantity    Float                            // Float untuk mendukung desimal
  note        String?
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())

  @@map("stock_history")
}
